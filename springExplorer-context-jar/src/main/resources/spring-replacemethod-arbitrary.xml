<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="myValueCalculator"
		class="com.wangsh.spring.beans.arbitraymethodreplace.MyValueCalculator">
		<!-- arbitrary method replacement -->
		<replaced-method name="computeValue"
			replacer="replacementComputeValue">
			<arg-type>String</arg-type>
		</replaced-method>
	</bean>

	<bean id="replacementComputeValue"
		class="com.wangsh.spring.beans.arbitraymethodreplace.ReplacementComputeValue" />
</beans>
